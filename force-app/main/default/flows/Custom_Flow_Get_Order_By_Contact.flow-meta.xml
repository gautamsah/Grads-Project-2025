<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <description>Adds the list of orders associated with the given contact record to the ContactOrders variable. This Assignment is a placeholder for enablement purposes and must be reconfigured in order to access your scheduling system.</description>
        <name>AddOrdersToVariable</name>
        <label>Add Orders to Variable</label>
        <locationX>138</locationX>
        <locationY>458</locationY>
        <assignmentItems>
            <assignToReference>orderCollection</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Iterate_All_the_Orders</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Iterate_All_the_Orders</targetReference>
        </connector>
    </assignments>
    <decisions>
        <description>Determines whether the customer has an associated Contact record.</description>
        <name>DoesContactExist</name>
        <label>Contact Exists?</label>
        <locationX>182</locationX>
        <locationY>134</locationY>
        <defaultConnectorLabel>No (Default)</defaultConnectorLabel>
        <rules>
            <name>ContactExists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>contactRecord</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>get_Order_Record</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>This flow will return the collection of the Order which is related to Contact.</description>
    <environments>Default</environments>
    <interviewLabel>Custom Flow Get Order By Contact {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Custom Flow Get Order By Contact</label>
    <loops>
        <description>This Loop Iterate all the Record of the Orders.</description>
        <name>Iterate_All_the_Orders</name>
        <label>Iterate All the Orders</label>
        <locationX>50</locationX>
        <locationY>350</locationY>
        <collectionReference>get_Order_Record</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>AddOrdersToVariable</targetReference>
        </nextValueConnector>
    </loops>
    <overriddenFlow>SvcCopilotTmpl__GetOrdersByContact</overriddenFlow>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Get all the Order Record Related to Contact.</description>
        <name>get_Order_Record</name>
        <label>get Order Record</label>
        <locationX>50</locationX>
        <locationY>242</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Iterate_All_the_Orders</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Contact__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>contactRecord.Id</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>Order</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>DoesContactExist</targetReference>
        </connector>
    </start>
    <status>InvalidDraft</status>
    <variables>
        <description>The contact record associated with the identified customer.</description>
        <name>contactRecord</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>Contact</objectType>
    </variables>
    <variables>
        <description>This Collection Store the All the Record of the Order.</description>
        <name>orderCollection</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <objectType>Order</objectType>
    </variables>
</Flow>
