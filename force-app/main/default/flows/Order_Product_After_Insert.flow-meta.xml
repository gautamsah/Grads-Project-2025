        <label>Update or Create The Record of the Order Product</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <connector>
            <targetReference>checkForError</targetReference>
        </connector>
        <flowName>Booked_Date_Create_or_Update</flowName>
        <inputAssignments>
            <name>chekinDate</name>
            <value>
                <elementReference>$Record.checkin__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>chekoutDate</name>
            <value>
                <elementReference>$Record.checkout__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>hotelProductIdFromParent</name>
            <value>
                <elementReference>$Record.Product2.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>slotsToBook</name>
            <value>
                <elementReference>$Record.Quantity</elementReference>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>isBookedDatesCreatedOrUpdatedSuccessfully</assignToReference>
            <name>result</name>
        </outputAssignments>
    </subflows>
    <variables>
