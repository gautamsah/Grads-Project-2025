        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_or_Create_The_Record_of_the_Order_Product</targetReference>
        </connector>
        <object>OrderItem</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <description>This sub-flow is used to update and create the record of the Order Item.</description>
